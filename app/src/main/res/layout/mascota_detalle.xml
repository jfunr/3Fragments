<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview_cardCornerRadius="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    android:id="@+id/cvmascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    cardview:cardCornerRadius="3dp"
    android:fitsSystemWindows="true"

    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgMascota"
            android:layout_width="200dp"
            android:layout_height="190dp"
            android:padding="10dp"
            android:layout_marginStart="90dp"
            android:src="@drawable/perro1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgButton"
                android:layout_width="77dp"
                android:layout_height="60dp"
                android:background="@android:color/background_light"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/hueso" />

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="190dp"
                android:layout_height="wrap_content"

                android:padding="3dp"
                android:text="@string/mascota1"
                android:textAlignment="center"

                android:textSize="30sp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:padding="5dp"
                android:text="@string/rate"

                android:textSize="40sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgRate"
                android:layout_width="77dp"
                android:layout_height="60dp"

                android:padding="10dp"
                android:src="@drawable/hamarillo" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>






























